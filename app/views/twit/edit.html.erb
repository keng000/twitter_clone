<div class="container">
  <div class="other col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h2>ツイートを編集する</h2>
<%= form_for(@tweet,url: twit_path(@tweet.id)) do |f| %>
<% if @tweet.errors.any? %>
<h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
<ul>
<% @tweet.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
  <%= f.label :content, "いまなにしてる？" %>
  <%= f.text_field :content ,class: 'form-control'%>
  <br>
  <%= f.submit 'tweet',class: 'btn btn-default btn-md btn-info' %>
<% end %>
<br>
<%= link_to "戻る", twit_index_path %>
</div>
</div>