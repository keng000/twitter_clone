<div class="container">
      <div class="col-md-3 col-sm-3 col-xs-12">
        <img src="<%= asset_path "twitterbird.png" %>" style="width:100%;height:auto;">
      </div>
      <div class="wrapper col-md-offset-1 col-md-6 col-sm-offset-1 col-sm-8 col-xs-12">
      <strong><%= notice %></strong>
      <h1>ツイート一覧</h1>
      <%= link_to "ツイートする", new_twit_path , class:'btn btn-default btn-info'%>
      <% @tweet.each do |twit| %>
      <div class="row">
        <p><%= twit.content %></p>
        <%= link_to "編集する", edit_twit_path(twit.id), class:'btn btn-default btn-sm btn-success'%>
        <%= link_to "削除する", twit_path(twit.id), method: :delete ,data: { confirm: '本当に削除していいですか？'}, class:'btn btn-default btn-sm btn-danger'%>
      </div>
      <% end %>
  </div>
  
</div>
